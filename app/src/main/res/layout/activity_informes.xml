            <ImageButton
                android:id="@+id/ibCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_cancel_black_24dp"
                android:theme="@style/MyButton" />
